{% extends 'base.html.twig' %}

{% block style %}
    <link rel="stylesheet" type="text/css" media="all" href="{{ asset('css/signing.css') }}">
{% endblock %}

{% block body %}
<div class="small-body">
    <div class="container">

        <h6>
            {%- if app.user -%}
                Herzlich willkommen &nbsp;<b style="    color: #FF9900;">{{- app.user.username -}}</b>!
            {%- endif -%}</span>
        </h6>

        <form class="form-signin" action="{{ path('login') }}" method="post">

            <h2 class="form-signin-heading">Please sign in</h2>
            {% if message %}
                    {{ message }}
            {% endif %}
            <input type="hidden" name="_csrf_token"value="{{ csrf_token('authenticate') }}">
            <label for="username" class="sr-only">Name</label>
            <input type="text" id="username" class="form-control" name ="_username" placeholder="Username" required autofocus>
            <label for="password" class="sr-only">Password</label>
            <input type="password" id="password" class="form-control" name="_password" placeholder="Password" required/>
            <button class="btn btn-lg btn-primary btn-block" type="submit">login</button>

            <div class="col-lg-12" style="margin-top: 20px;">
                Du bist noch nicht registriert? Registriere dich <a href="{{ path('signup') }}">jetzt.</a>
            </div>
            <div class="col-lg-12" style="margin-top: 20px;">
                Registriere dich als Fotograf <a href="{{ path('photograph_registration') }}">jetzt.</a>
            </div>
            <div class="col-lg-12" style="margin-top: 20px;">
                Passwort vergessen? Klick <a href="{{ path('forgot_password') }}">hier.</a>
            </div>
        </form>

    </div> <!-- /container -->
</div>
{% endblock %}

