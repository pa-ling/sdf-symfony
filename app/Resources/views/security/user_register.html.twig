{% extends 'base.html.twig' %}

{% block style %}
    <link rel="stylesheet" type="text/css" media="all" href="{{ asset('css/signing.css') }}">
{% endblock %}

{% block body %}
<div class="main-body">
    <div class="col-md-4 col-md-offset-4">

        <h2>User - Registration</h2><br>
        {% if message %}
            <div class="alert alert-{{ status }}">
                {{ message }}
            </div>		
        {% endif %}

        {{ form_start(form, {'attr': {'class': 'form-register'}}) }}


        {{ form_widget(form.username, {'attr': {'class': 'form-control', 'placeholder': 'Username', 'required': 'true', 'pattern': '^[A-Za-z0-9_]{1,15}$', 'title':'Username with character maximum of 15 and no space.'}}) }}
        {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Email', 'required': 'true'}}) }}
        {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control', 'placeholder': 'Password', 'required': 'true'}}) }}
        {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control', 'placeholder': 'Re-Password', 'required': 'true'}}) }}

        {{ form_widget(form.save, {'attr': {'class': 'btn btn-lg btn-primary btn-block'}}) }}


                {{ form_end(form) }}

        <div class="col-lg-12" style="margin-top: 20px;">
            Already have an account? <a href="{{ path('login') }}">Sign in.</a>
        </div>
    </div>
</div>

{% endblock %}