{% extends 'base.html.twig' %}

{% block style %}
    <link rel="stylesheet" type="text/css" media="all" href="{{ asset('css/signing.css') }}">
{% endblock %}

{% block body %}
<div class="small-body">
    <div class="container">

        <h2>Photograph - Registrierung</h2><br>

                {{ form_start(form) }}
                {{ form_row(form.username) }}
                {{ form_row(form.email) }}
                {{ form_row(form.plainPassword.first) }}
                {{ form_row(form.plainPassword.second) }}

                <input type="text" class="form-control" name ="firstname" placeholder="Fristname">
                <label for="shortDesc" class="sr-only">Fristname</label>
                <input type="text" class="form-control" name ="lastname" placeholder="Lastname">
                <label for="longDesc" class="sr-only">Lastname</label>


                <input type="text" id="shortDesc" class="form-control" name ="shortDesc" placeholder="shortDesc">
                <label for="shortDesc" class="sr-only">shortDesc</label>
                <input type="text" id="longDesc" class="form-control" name ="longDesc" placeholder="longDesc">
                <label for="longDesc" class="sr-only">longDesc</label>
                {{ form_end(form) }}
        </div> <!-- /container -->
    </div>
</body>

{% endblock %}