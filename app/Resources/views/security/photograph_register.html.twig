{% extends 'base.html.twig' %}

{% block style %}
    <link rel="stylesheet" type="text/css" media="all" href="{{ asset('css/signing.css') }}">
{% endblock %}

{% block body %}
<div class="main-body">
    <div class="col-md-4 col-md-offset-4">
        <h3>Photographer - Registration</h3><br>
        {% if message %}
            <div class="alert alert-{{ status }}">
                {{ message }}
            </div>		
        {% endif %}

        {{ form_start(form, {'attr': {'class': 'form-register'}}) }}
        {{ form_widget(form.username, {'attr': {'class': 'form-control', 'placeholder': 'Username', 'required': 'true', 'pattern': '^[A-Za-z0-9_]{1,15}$', 'title':'Username with character maximum of 15 and no space.'}}) }}
        {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Email', 'required': 'true'}}) }}
        {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control', 'placeholder': 'Password', 'required': 'true','title':'UpperCase, LowerCase, Number/SpecialChar and min 8 Chars'}}) }}
        {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control', 'placeholder': 'Re-Password', 'required': 'true', 'title':'UpperCase, LowerCase, Number/SpecialChar and min 8 Chars'}}) }}
        <input type="text" maxlength="100" class="form-control" name ="firstname" placeholder="Firstname" required title="Firstname have a character maximum of 100">
        <label for="shortDesc" class="sr-only">Fristname</label>
        <input type="text" maxlength="100" class="form-control" name ="lastname" placeholder="Lastname" required title="Lastname have a character maximum of 100">
        <label for="longDesc" class="sr-only">Lastname</label>


        <input type="text" id="shortDesc" class="form-control" name ="shortDesc" placeholder="Short Description" title="Short description have a character maximum of 100"  maxlength="100" required>
        <label for="shortDesc" class="sr-only">shortDesc</label>
        <textarea rows="5" cols="50" type="text" id="longDesc" class="form-control" name ="longDesc" placeholder="Long Description" title="Short description has a character maximum of 500" maxlength="500" required></textarea>
        <label for="longDesc" class="sr-only">longDesc</label>

        {{ form_widget(form.save, {'attr': {'class': 'btn btn-lg btn-primary btn-block'}}) }}
        {{ form_end(form) }}

        <div class="col-lg-12" style="margin-top: 20px;">
            Already have an account? <a href="{{ path('login') }}">Sign in.</a>
        </div>
    </div>
</div>

{% endblock %}