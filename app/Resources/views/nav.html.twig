{% block nav %}
    <nav class="navbar navbar-custom navbar-fixed-top">
        <div class="container">
            <a class="navbar-brand" href="/">Symfoto</a>
            <div id="navbar" class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    {% if app.user %}
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle nav-dropdown" data-toggle="dropdown" role="button"
                               aria-haspopup="true" aria-expanded="false">Hallo {{ app.user.username }}!<span
                                        class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li><a href="/profile">Dashboard</a></li>
                                {% if is_granted('ROLE_ADMIN') %}
                                    <li><a href="/admin">Admin Dashboard</a></li>
                                {% endif %}
                                <li role="separator" class="divider"></li>
                                <li><a href="/logout">Logout</a></li>
                            </ul>
                        </li>
                    {% else %}
                        <li><a href="/login" class="nav-dropdown">Login/Register</a></li>
                    {% endif %}
                    <li>
                        <a href="/checkout" class="nav-dropdown">
                            <img src="{{ asset('images/cart-1.png') }}" alt=""/>
                        </a>
                    </li>
                </ul>
            </div><!--/.nav-collapse -->
        </div>
    </nav>
    <div class="header-bottom">
        <div class="container">
            <div class="col-md-4 pull-right">
                <div class="search-bar">
                    <form class="form-signin" action="{{ path('search') }}" method="post">
                        <input type="text" id="keyword" name="keyword" placeholder="Search">
                        <input type="submit" value="">
                    </form>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
