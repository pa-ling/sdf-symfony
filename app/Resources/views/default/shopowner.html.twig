{% extends 'base.html.twig' %}

{% block body %}
<div class="main-body">
    <div class="col-md-12">
        <div class="ckeck-top heading">
            <h2>My Shop</h2>
        </div>
        <div class="alert alert-success" id="notification" style="display:none">
        </div>
        <div class="col-md-12 single-main-left">
            <div class="sngl-top">
                <div class="col-md-12 single-top-right">
                    <div class="single-para simpleCart_shelfItem">
                        <h2>{{ shopowner.firstname }} {{ shopowner.surname }}</h2>
                        <p>{{ shopowner.longdescr }}</p>
                        <ul class="tag-men">
                            <li><span>Count of products in this shop:</span>
                                <span class="women1"> {{ numberOfProducts }}</span></li>
                        </ul>
                    </div>
                </div>
                <div class="clearfix"> </div>
            </div>
            <div class="tabs">
                <ul class="menu_drop">
                    <li class="item1"><a>Products</a></li>
                </ul>
            </div>
            <div class="latestproducts">
                {% for item in products %}
                    {% if (loop.index % 3) >= 0 %}
                        {% if (loop.index % 3) == 1 %}
                            <div class="product-one">
                        {% endif %}
                            {% if item.enabled %}

                                <div class="col-md-4 product-left p-left">
                                    <div class="product-main simpleCart_shelfItem">
                                        <a href="/productdetails/{{item.getId}}" class="mask">
                                            <img style="width:80%;" src="/uploads/media/default/0001/01/thumb_{{ item.getImage }}_default_small.png">
                                        </a>
                                        <div class="product-bottom">
                                            <h3>{{item.getName}}</h3>
                                            <h4><span class="item_price">â‚¬ {{ item.getPrice }}</span></h4>
                                                <button class="btn btn-primary" onclick=addBasketItem({{item.id}})>ADD TO CART</button>
                                        </div>
                                    </div>
                                </div>
                            {% endif %}
                        {% if (loop.index % 3) == 0 or (loop.index) == (loop.last)%}
                            <div class="clearfix"></div>
                            </div>
                        {% endif %}
                    {% else %}
                    {% endif %}
                {% endfor %}
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block script %}
<script type="text/javascript">
    function addBasketItem(item) {
        $('#notification').hide();
        waitingDialog.show('Loading...', {dialogSize: 'sm', progressType: 'info'});
        var request = new XMLHttpRequest();
        request.open("POST", "/post_checkout/"+ item);
        request.addEventListener('load', function(event) {
            if (request.status >= 200 && request.status < 300) {
                $('#notification').text('You have successfully checked out one item. Please check your cart to proceed your order.');
                waitingDialog.hide();
            } else if(request.code == 'undefined' || request.code == null){
                $('#notification').text('Item already in your basket.');
                waitingDialog.hide();
            } else {
                $('#notification').text('Please check your cart to proceed your order.');                waitingDialog.hide();
            }
            $('#notification').show();
        });
        request.send();
    }
</script>
{% endblock %}