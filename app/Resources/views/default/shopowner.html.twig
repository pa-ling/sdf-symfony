{% extends 'base.html.twig' %}

{% block body %}
    <div class="single contact">
        <div class="container">
            <div class="single-main">
                <div class="col-md-12 single-main-left">
                    <div class="sngl-top">
                        <div class="col-md-12 single-top-right">
                            <div class="single-para simpleCart_shelfItem">
                                <h2>{{ shopowner.firstname }} {{ shopowner.surname }}</h2>
                                <h5 class="item_price">Shop Description</h5>
                                <p>{{ shopowner.longdescr }}</p>
                                <ul class="tag-men">
                                    <li><span>Count of products in this shop:</span>
                                        <span class="women1"> {{ numberOfProducts }}</span></li>
                                </ul>
                            </div>
                        </div>
                        <div class="clearfix"> </div>
                    </div>
                    <div class="tabs">
                        <ul class="menu_drop">
                            <li class="item1"><a href="#"><img src="{{ asset('images/arrow.png') }}" alt="">Products</a>
                                <ul>
                                    <li class="subitem1"><a href="#">Here you can find every product {{ shopowner.firstname }} {{ shopowner.surname }} is offering.</a></li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                    <div class="latestproducts">
                        {% for item in products %}
                            {% if (loop.index % 3) >= 0 %}
                                {% if (loop.index % 3) == 1 %}
                                    <div class="product-one">
                                {% endif %}
                                    {% if item.enabled %}

                                        <div class="col-md-4 product-left p-left">
                                            <div class="product-main simpleCart_shelfItem">
                                                <a href="/productdetails/{{item.getSlug}}" class="mask">
                                                    <img style="width:80%;" src="/uploads/media/default/0001/01/{{ item.image }}"></a>
                                                <div class="product-bottom">
                                                    <h3>{{item.getName}}</h3>
                                                    <h4><span class="item_price">â‚¬ {{ item.getPrice }}</span></h4>
                                                     <button onclick=addBasketItem({{item.id}})>ADD TO CART</button>
                                                </div>
                                            </div>
                                        </div>
                                    {% endif %}
                                {% if (loop.index % 3) == 0 or (loop.index) == (loop.last)%}
                                    <div class="clearfix"></div>
                                    </div>
                                {% endif %}
                            {% else %}
                            {% endif %}
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block script %}
<script type="text/javascript">
    function addBasketItem(item) {
        console.log("addBasketItem "+  item);
        var request = new XMLHttpRequest();
        console.log("{{ path('checkout') }}")
        request.open("GET", "{{ path('checkout') }}/"+ item);
        request.send();
    }
</script>
{% endblock %}