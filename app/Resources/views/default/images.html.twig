{% block body %}
{# <div class="small-body">
    <div class="container"> #}
        <h3>Image</h3>
        <div class="row col-md-12 custyle">
            <table class="table table-striped custab">
                <thead>
                    <div class="pull-left">
                        <p>Select images from your computer</p>
                        <form action="/image/new/null"  method="post" enctype="multipart/form-data">
                            <div class="form-inline">
                            <div class="form-group">
                                <input type="file" name="images[]" multiple>
                            </div>
                            <button type="submit" class="btn btn-sm btn-primary">Upload images</button>
                            </div>
                        </form>
                    </div>
                    <tr>
                        <th>Name</th>
                        <th>Gallery</th>
                        <th>Updated At</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    {% for item in images %}
                        <tr>
                            <td>
                                <a href="/image/{{item.getProviderReference}}">{{ item.getName }}</a>
                            </td>
                            <td>
                                <p>
                                    {{ current_galleries[item.id] | raw }}
                                </p>
                            </td>
                            <td>{{ createdAt[loop.index - 1] }}</td>
                            <td><a href="/image/delete/{{item.id}}" class="btn btn-danger btn-xs"><span class="glyphicon glyphicon-remove"></span> Del</a></td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {# </div>
</div> #}
{% endblock %}
