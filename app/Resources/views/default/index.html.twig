{% extends 'base.html.twig' %}

{% block body %}

    <div id="" style="margin-top: 0px; height: 90px;"></div>
    {% for item in homeAll %}
        {% if item.imagePosition == true %}
            <section class="main-section" style="{{ (loop.index % 2) ? 'background: #fafafa' }}">
                <div class="container">
                    <h2>{{ item.titel }}</h2>
                    <h6>{{ item.topline }}</h6>

                    <div class="row">
                        <div class="col-lg-4 col-sm-6 wow fadeInLeft delay-05s">
                            {{ item.content | raw | nl2br }}
                        </div>

                        <figure class="col-lg-8 col-sm-6  text-center wow fadeInUp delay-02s ">
                            {% media item.image, 'small' with {'class': 'maxwidth'} %}
                        </figure>
                    </div>
                </div>
            </section>
        {% else %}
            <section class="main-section" style="{{ (loop.index % 2) ? 'background: #fafafa' }}">
                <div class="container">
                    <h2>{{ item.titel }}</h2>
                    <h6>{{ item.topline }}</h6>
                    <div class="row">
                        <figure class="col-lg-5 col-sm-4 wow fadeInLeft text-center">
                            {% media item.image, 'small' with {'class': 'maxwidth'} %}
                        </figure>
                        <div class="col-lg-7 col-sm-8 featured-work">

                            <div class="featured-box">
                                <div class="featured-box-col2 wow fadeInRight delay-02s">
                                    {{ item.content | raw | nl2br }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        {% endif %}
    {% endfor %}
{% endblock %}