{% extends 'base.html.twig' %}

{% block body %}
 <div class="body">
    <div class="container">
        <!--prdt-starts-->
        <div class="prdt">
            {# <div class="prdt-top"> #}
                <div class="col-md-9 prdt-left">
                    <div class="product-one">
                        {% for item in products %}
                            <div class="col-md-4 product-left p-left">
                                <div class="product-main simpleCart_shelfItem">
                                    <a href="/product/{{item.getSlug}}" class="mask">
                                        <img style="width:100%;" src="/images/abt-1.jpg">
                                    </a>
                                    <div class="product-bottom">
                                        <h3>{{item.getName}}</h3>
                                        <h4><span class="item_price">â‚¬ {{ item.getPrice }}</span></h4>
                                    </div>
                                    <div class="srch srch1">
                                        <span>-50%</span>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>

                <div class="clearfix"></div>
            </div>
        </div>
    </div>
    <!--product-end-->
<script>
		function addBasketItem(id) {
            console.log('checkout: ',id);
			var request = new XMLHttpRequest();
			request.open("POST", "checkout/" + id);
			request.addEventListener('load', function(event) {
				window.location.reload();
			})
			request.send();
		}
		$(document).ready(function(c)
		{
			$('.close1').on('click', function(c)
			{
				var itemId = c.target.id;
				var selectorForCartItem = '#cartitem' + itemId;
				$(selectorForCartItem).fadeOut('slow', function(c)
				{
					$(selectorForCartItem).remove();
				});

				var request = new XMLHttpRequest();
				request.open("DELETE", "checkout/" + itemId);
				request.send();
			});	  
		});
	</script>
</div>

{% endblock %}