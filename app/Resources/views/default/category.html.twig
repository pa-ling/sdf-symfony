{% extends 'base.html.twig' %}

{% block body %}
	<div class="ckeckout">
		<div class="container">
			<div class="ckeck-top heading">
				<h2>Categories</h2>
			</div>
			<div class="ckeckout-top">
				<div class="cart-items">
					<div class="in-check">
						<ul class="unit">
							<li><span>#</span></li>
							<li><span>Name</span></li>
							<div class="clearfix"> </div>
						</ul>

						{% for category in categories %}
							<ul class="cart-header" id="cartitem{{category.id}}" >
								<li><span class="cost">{{ loop.index }}</span></li>
								<li><span class="cost">{{category.name}}</span></li>
								<div class="clearfix"> </div>
							</ul>
						{% endfor %}
						<ul class="cart-header" >
							<li><br></li>
							<li>
								<form action="{{ path('addCategory') }}" method="post">
									<div class="row">
										<div class="col-md-10">
											<div class="form-group">
												<input name="categoryName" type="text" placeholder="New Category" class="form-control" required>
											</div>
										</div>
										<div class="col-md-2">
											<button type="submit" name="order" value="order" class="btn btn-primary">+</button>
										</div>
									</div>
								</form>
							</li>
							<div class="clearfix"> </div>
						</ul>
					</div>
				</div>
		 	</div>
		</div>
	</div>
	
{% endblock %}