{% extends 'base.html.twig' %}

{% block style %}
    <link rel="stylesheet" type="text/css" media="all" href="{{ asset('css/signing.css') }}">
{% endblock %}

{% block sidebar %}
    {%- include 'sidebar.html.twig' -%}
{% endblock %}

{% block body %}
<div class="small-body">
    <div class="container">

        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <nav aria-label="breadcrumb" role="navigation">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/profile">Profile</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Edit</li>
                    </ol>
                </nav>

                <form class="form-horizontal" action="{{ path('sonata_user_profile_edit') }}" method="POST">
                    <fieldset>

                    <!-- Form Name -->
                    <legend>Dein Profil</legend>

                    <!-- Text input-->
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="textinput">Geschlecht</label>
                        <div class="col-sm-10">
                        <input type="text" name="gender" placeholder="Geschlecht" class="form-control">
                        </div>
                    </div>

                    <!-- Text input-->
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="textinput">Vorname</label>
                        <div class="col-sm-10">
                        <input type="text" name="firstname" placeholder="Vorname" class="form-control">
                        </div>
                    </div>

                     <!-- Text input-->
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="textinput">Nachname</label>
                        <div class="col-sm-10">
                        <input type="text" name="lastname" placeholder="Nachname" class="form-control">
                        </div>
                    </div>

                     <!-- Text input-->
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="textinput">Vorname</label>
                        <div class="col-sm-10">
                        <input type="text" placeholder="Vorname" class="form-control">
                        </div>
                    </div>

                     <!-- Text input-->
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="textinput">Geburtstag</label>
                        <div class="col-sm-10">
                        <input type="text" name="biography" placeholder="Geburtstag" class="form-control">
                        </div>
                    </div>

                    <!-- Text input-->
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="textinput">Ort</label>
                        <div class="col-sm-4">
                        <input type="text" name="locale" placeholder="Ort" class="form-control">
                        </div>

                        <label class="col-sm-2 control-label" for="textinput">Telephone</label>
                        <div class="col-sm-4">
                        <input type="text" name="phone" placeholder="Telephone" class="form-control">
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                        <div class="pull-right">
                            <button type="submit" class="btn btn-default">Cancel</button>
                            <button type="submit" class="btn btn-primary">Save</button>
                        </div>
                        </div>
                    </div>

                    </fieldset>
                </form>
            </div><!-- /.col-lg-12 -->
        </div><!-- /.row -->
        
    </div>
</div>
{% endblock %}