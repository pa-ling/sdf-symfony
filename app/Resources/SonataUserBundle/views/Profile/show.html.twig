{% extends 'base.html.twig' %}

{% block style %}
    <link rel="stylesheet" type="text/css" media="all" href="{{ asset('css/signing.css') }}">
    <link rel="stylesheet" type="text/css" media="all" href="{{ asset('css/profile.css') }}">
{% endblock %}

{% block sidebar %}
    {%- include 'sidebar.html.twig' -%}
{% endblock %}

{% block body %}
<div class="small-body">
    <div class="container">

        <div class="row">
            <div class="col-md-5  toppad  pull-right col-md-offset-3 ">
            <p class=" text-info">{{ 'now'|date() }}</p>
            </div>
                <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xs-offset-0 col-sm-offset-0 col-md-offset-3 col-lg-offset-3 toppad" >
        
        
                <div class="panel panel-info">
                    <div class="panel-heading">
                    <h3 class="panel-title">{{ user.username }}</h3>
                    </div>
                    <div class="panel-body">
                    <div class="row">
                        <div class="col-md-3 col-lg-3 " align="center"> 
                            <img alt="User Pic"  src="{{ asset('images/user.png') }}" width="100%" class="img-circle img-responsive">
                        </div>
                        
                        <div class=" col-md-9 col-lg-9 "> 
                        <table class="table table-user-information">
                            <tbody>
                                <tr>
                                    <td>Department:</td>
                                    <td>...</td>
                                </tr>
                                    <td>Home Address</td>
                                    <td>...</td>
                                </tr>
                                <tr>
                                    <td>Email</td>
                                    <td><a href="mailto:{{ user.email }}">{{ user.email }}</a></td>
                                </tr>
                                    <td>Phone Number</td>
                                    <td>123-4567-890(Landline)<br><br>555-4567-890(Mobile)
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        
                        {# <a href="/profile/edit-profile" class="btn btn-primary">Edit Profile</a>
                        <a href="/profile/edit-authentication" class="btn btn-primary">Authentication</a> #}
                        </div>
                    </div>
                    </div>
                    <div class="panel-footer">
                    </div>
                    
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}